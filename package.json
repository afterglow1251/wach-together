{
  "name": "watch-together",
  "version": "2.0.0",
  "type": "module",
  "scripts": {
    "dev": "concurrently -n server,client -c blue,magenta \"bun run dev:server\" \"bun run dev:client\"",
    "dev:server": "bun run --watch src/server/index.ts",
    "dev:client": "vite",
    "build": "vite build",
    "start": "NODE_ENV=production bun run src/server/index.ts"
  },
  "dependencies": {
    "@solidjs/router": "^0.15.0",
    "@tanstack/solid-query": "^5.0.0",
    "drizzle-orm": "^0.45.1",
    "elysia": "^1.2.12",
    "hls.js": "^1.5.0",
    "lucide-solid": "^0.564.0",
    "plyr": "^3.7.8",
    "postgres": "^3.4.8",
    "solid-js": "^1.9.0",
    "solid-toast": "^0.5.0"
  },
  "devDependencies": {
    "@types/bun": "^1.3.9",
    "drizzle-kit": "^0.31.9",
    "vite": "^6.0.0",
    "vite-plugin-solid": "^2.10.0",
    "tailwindcss": "^4.0.0",
    "@tailwindcss/vite": "^4.0.0",
    "concurrently": "^9.0.0"
  }
}
