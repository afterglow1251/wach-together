{
  "name": "watch-together",
  "version": "2.0.0",
  "type": "module",
  "scripts": {
    "dev": "concurrently -n server,client -c blue,magenta \"bun run dev:server\" \"bun run dev:client\"",
    "dev:server": "bun run --watch src/server/index.ts",
    "dev:client": "vite",
    "build": "vite build",
    "start": "NODE_ENV=production bun run src/server/index.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "prepare": "husky"
  },
  "dependencies": {
    "@solidjs/router": "^0.15.0",
    "@tanstack/solid-query": "^5.0.0",
    "drizzle-orm": "^0.45.1",
    "elysia": "^1.2.12",
    "hls.js": "^1.5.0",
    "lucide-solid": "^0.564.0",
    "plyr": "^3.7.8",
    "postgres": "^3.4.8",
    "solid-js": "^1.9.0",
    "solid-toast": "^0.5.0"
  },
  "devDependencies": {
    "@solidjs/testing-library": "^0.8.10",
    "@tailwindcss/vite": "^4.0.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@types/bun": "^1.3.9",
    "@vitest/coverage-v8": "^4.0.18",
    "concurrently": "^9.0.0",
    "drizzle-kit": "^0.31.9",
    "husky": "^9.1.7",
    "jsdom": "^28.1.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "tailwindcss": "^4.0.0",
    "vite": "^6.0.0",
    "vite-plugin-solid": "^2.10.0",
    "vitest": "^4.0.18"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json,css,html}": "prettier --write"
  }
}
